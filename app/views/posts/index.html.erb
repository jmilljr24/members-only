<h1>Posts</h1>
<%= link_to "Log In", new_user_session_path %>
<%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>

<ul>
  <% @post.each do |post| %>
    <li>
      <%= post.body  %>
      <% if user_signed_in? %>
      <p> <%= post.user.username.capitalize %></p>
      <% end%>
    </li>
  <% end %>
</ul>


<%= link_to "New Post", new_post_path %>
